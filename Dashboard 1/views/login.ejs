<![endif]-->
</head>

<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper custom-login-wrapper">
            <div class="auth-box custom-login-card">
                <div id="loginform">
                    <div class="login-brand">
                        <div class="login-brand-logo">D</div>
                        <div>
                            <div class="login-brand-main">DashboardX</div>
                            <div class="login-brand-sub">Sign in to continue</div>
                        </div>
                    </div>
                    <h2 class="login-heading">Welcome back</h2>
                    <p class="login-subtitle">Enter your credentials to access your dashboard.</p>

                    <!-- Login Form -->
                    <form class="m-t-20" id="loginform" action="/login" method="post">
                        <div class="form-group">
                            <label class="login-label" for="email">Email address</label>
                            <input id="email" type="email" name="email" class="form-control login-input"
                                placeholder="you@example.com" required="">
                        </div>
                        <div class="form-group m-t-15">
                            <label class="login-label" for="password">Password</label>
                            <input id="password" type="password" name="password" class="form-control login-input"
                                placeholder="••••••••" required="">
                        </div>

                        <div class="login-row">
                            <label class="login-checkbox mb-0">
                                <input type="checkbox">
                                <span>Remember me</span>
                            </label>
                            <a href="javascript:void(0)" id="to-recover">Forgot password?</a>
                        </div>

                        <button class="login-btn-primary" type="submit">Sign in</button>

                        <div class="login-footer-text">
                            New here?
                            <a href="javascript:void(0)">Create an account</a>
                        </div>
                    </form>
                </div>

                <div id="recoverform" style="display:none;">
                    <h2 class="login-heading">Recover password</h2>
                    <p class="login-subtitle">
                        Enter your e-mail address below and we’ll send you instructions to reset your password.
                    </p>
                    <form action="index.html">
                        <div class="form-group">
                            <label class="login-label" for="recover-email">Email address</label>
                            <input id="recover-email" type="email" class="form-control login-input"
                                placeholder="you@example.com" required="">
                        </div>
                        <div class="login-row">
                            <a href="javascript:void(0)" id="to-login">Back to login</a>
                        </div>
                        <button class="login-btn-primary" type="button" name="action">Send reset link</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
